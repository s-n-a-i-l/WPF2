<Window x:Class="TextEditor2._0.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TextEditor2._0"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" Background="#1E1E1E" Foreground="#2C2C2C">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition/>
		</Grid.RowDefinitions>

		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="40"/>
			</Grid.RowDefinitions>

			<Menu FontSize="25" Background="#2C2C2C" Foreground="#F5F5F5" >

				<MenuItem Header="File" >
					<MenuItem Header="New" Click="MenuItem_Click_New" Background="#2C2C2C"/>
					<MenuItem Header="Open" Click="MenuItem_Click_Open" Background="#2C2C2C"/>
					<Separator/>
					<MenuItem Header="Save" Click="MenuItem_Click_Save" Background="#2C2C2C"/>
					<Separator/>
					<MenuItem Header="Quit" Click="MenuItem_Click" Background="#2C2C2C"/>
				</MenuItem>

				<ComboBox Name="cbFontSize" FontSize="16"
						  Height="25" Width="50" 
					      Background="DarkGray" Foreground="#2C2C2C"
					      IsEditable="True" SelectionChanged="cbFontSize_SelectionChanged"/>

				<ComboBox  Name="cbFontStyle" SelectionChanged="cbFontStyle_SelectionChanged" 
						   Height="25" Width="150" FontSize="16"
						   Background="DarkGray" Foreground="#2C2C2C"
						   />

			</Menu>



		</Grid>

		<!--<TextBox Name ="txtBox1"
				Grid.Row="1" Background="#333333" Foreground="#F5F5F5" FontSize="32" Margin="32,7,28,0"
		        ScrollViewer.VerticalScrollBarVisibility="Visible" TextWrapping="Wrap"
				MouseWheel="txtBox1_MouseWheel" 
				SpellCheck.IsEnabled="True"
				Language="ru-RU">
			<TextBox.LayoutTransform>
				<ScaleTransform x:Name="MyScaleTransform" ScaleX="1" ScaleY="1"/>
			</TextBox.LayoutTransform>
		</TextBox>-->
		<RichTextBox Name="txtBox1"
             Grid.Row="1"
             Background="#333333"
             Foreground="#F5F5F5"
             FontSize="32"
             Margin="32,7,28,0"
             ScrollViewer.VerticalScrollBarVisibility="Visible"
             MouseWheel="txtBox1_MouseWheel"
             SpellCheck.IsEnabled="True"
             Language="ru-RU">
			<RichTextBox.LayoutTransform>
				<ScaleTransform x:Name="MyScaleTransform" ScaleX="1" ScaleY="1"/>
			</RichTextBox.LayoutTransform>
		</RichTextBox>



	</Grid>
</Window>
