<UserControl x:Class="MenuBar.View.UserControls.MenuBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MenuBar.View.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="70" d:DesignWidth="800">
    <Grid>
		<Grid>
			<Grid.RowDefinitions>
				<RowDefinition Height="30"/>
				<RowDefinition Height="40"/>
			</Grid.RowDefinitions>

			<Menu FontSize="18">

				<MenuItem Header="File">
					<MenuItem Header="New"/>
					<MenuItem Header="Open"/>
					<Separator/>
					<MenuItem Header="Save"/>
					<MenuItem Header="Save As"/>
					<Separator/>
					<MenuItem Header="Quit" Click="MenuItem_Click"/>
				</MenuItem>

				<MenuItem Header="Edit">
					<MenuItem Header="Find"/>
					<MenuItem Header="Replace"/>
					<Separator/>
					<MenuItem Header="Undo"/>
					<MenuItem Header="Redo"/>
				</MenuItem>

			</Menu>

			<Grid Grid.Row="1">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="auto"/>
					<ColumnDefinition Width="auto"/>
				</Grid.ColumnDefinitions>
				<Button  Grid.Column="0" Width="100" Margin="10" Content="Кнопка"/>
				<TextBox Grid.Column="1" Width="200" Margin="10"/>
			</Grid>

		</Grid>

	</Grid>
</UserControl>
